# Audit Correlator Go - Environment Configuration Example
# Copy to .env and modify for your local development environment
# DO NOT commit .env file with secrets!

# Service Configuration
SERVICE_NAME=audit-correlator
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Network Configuration
HTTP_PORT=8083
GRPC_PORT=50053

# Database Configuration (via audit-data-adapter-go)
# Production/Orchestrator URLs (from trading-ecosystem/orchestrator-docker)
POSTGRES_URL=postgres://audit_adapter:audit-adapter-db-pass@localhost:5432/trading_ecosystem?sslmode=disable
REDIS_URL=redis://audit-adapter:audit-pass@localhost:6379/0

# Test Database Configuration (for local testing)
# Note: Tests use admin Redis user to avoid ACL permission issues during testing
TEST_POSTGRES_URL=postgres://audit_adapter:audit-adapter-db-pass@localhost:5432/trading_ecosystem?sslmode=disable
TEST_REDIS_URL=redis://admin:admin-secure-pass@localhost:6379/0

# External Services
CONFIGURATION_SERVICE_URL=http://localhost:8090

# Service Discovery
HEALTH_CHECK_INTERVAL=30s

# Client Configuration
REQUEST_TIMEOUT=10s
CACHE_TTL=5m

# Logging
LOG_LEVEL=info

# Connection Configuration (for audit-data-adapter-go)
MAX_CONNECTIONS=25
MAX_IDLE_CONNECTIONS=10
CONNECTION_TIMEOUT=30s
IDLE_TIMEOUT=10m

# Retry Configuration
MAX_RETRIES=3
RETRY_INTERVAL=5s

# Test Configuration
TEST_LOG_LEVEL=info
TEST_TIMEOUT=10m
SKIP_INTEGRATION_TESTS=false
